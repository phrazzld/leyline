{
  "name": "metadata-migration",
  "version": "1.0.0",
  "description": "Script to convert legacy horizontal rule metadata to YAML front-matter in Markdown files",
  "main": "dist/index.js",
  "bin": {
    "metadata-migration": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "metadata",
    "migration",
    "markdown",
    "yaml"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.10.0",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.15.18",
    "commander": "^13.1.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "glob": "^11.0.2",
    "js-yaml": "^4.1.0"
  }
}
