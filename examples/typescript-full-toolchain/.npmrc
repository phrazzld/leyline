# TypeScript Full Toolchain - Supply Chain Security Configuration
# This file enforces security-first dependency management practices

# Security Settings
audit-level=moderate
verify-store-integrity=true
engine-strict=true

# Performance and Reliability
progress=false
fund=false
save-exact=false

# Registry Configuration
registry=https://registry.npmjs.org/

# Cache and Installation Behavior
prefer-offline=true
cache-verify=true

# Security Headers and Verification
verify-signatures=true
before-install-script=false
unsafe-perm=false

# Workspace Configuration
shared-workspace-lockfile=true
link-workspace-packages=true
