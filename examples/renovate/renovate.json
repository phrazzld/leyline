{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "description": "Automatically update Leyline references in GitHub workflows",
      "matchPackageNames": [
        "phrazzld/leyline"
      ],
      "matchDepTypes": [
        "action"
      ],
      "enabled": true,
      "automerge": true,
      "addLabels": [
        "leyline-update"
      ]
    }
  ]
}
